<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>coverio - share your talent</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><img src="~/Images/logoCoverio.png" /></p>
                </div>
               <div >

                <label for="searchCover"></label>
                @Html.JQueryUI().Autocomplete("searchCover", Url.Action("AutoComplete"))

                        @(Html.JQueryUI().Button("Find", ButtonElement.Button, ButtonType.Submit, null).Icons("margin-bottom:6px; ui-icon-search", true))           
                 <div class="">
                    <section id="login">
                      @Html.Partial("_LoginPartial")                    
                    </section>
                    <nav>

                    </nav>
                </div>
               </div>
               
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Copyright by coverio.com</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
        @RenderSection("scripts", required: false)
    </body>
</html>
